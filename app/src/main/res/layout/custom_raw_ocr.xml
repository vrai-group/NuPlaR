<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dim_foreground_material_light"
    android:alpha="0.7"
    >



    <ImageView
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:id="@+id/bpImage"
        android:layout_alignParentLeft="false"
        android:layout_marginLeft="2dp"
        android:layout_alignParentTop="false"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:maxWidth="120dp" />

    <Spinner
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:id="@+id/ocrSpinner"
        android:layout_toRightOf="@+id/bpImage"
        android:layout_toLeftOf="@+id/ocrText"
        android:layout_alignTop="@+id/bpImage"
        android:layout_alignBottom="@id/bpImage"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:layout_marginLeft="2dp"
        android:layout_toStartOf="@+id/ocrText" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SaveButton"
        android:text="Salva"

       android:layout_marginTop="8dp"
        android:layout_alignTop="@+id/ocrText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp" />


    <EditText
        android:layout_width="155dp"
        android:layout_height="30dp"
        android:id="@+id/ocrText"
        android:layout_toLeftOf="@+id/SaveButton"
        android:layout_alignTop="@+id/ocrSpinner"
        android:layout_marginTop="2dp"
        android:layout_marginRight="19dp"
        android:minWidth="150dp"
        android:maxLength="9"
        android:layout_alignBottom="@+id/ocrSpinner"
        android:maxWidth="150dp"
        android:maxLines="1"
        android:singleLine="true" />

</RelativeLayout>