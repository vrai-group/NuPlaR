<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Operatore:"
        android:textStyle="bold"
        android:id="@+id/labelOperatore"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Text"
        android:id="@+id/operatoreId"
        android:layout_alignTop="@+id/labelOperatore"
        android:layout_toRightOf="@+id/labelOperatore"
        android:layout_toEndOf="@+id/labelOperatore" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Survey:"
        android:textStyle="bold"
        android:id="@+id/labelSurvey"
        android:layout_marginLeft="89dp"
        android:layout_marginStart="89dp"
        android:layout_alignTop="@+id/operatoreId"
        android:layout_toRightOf="@+id/operatoreId"
        android:layout_toEndOf="@+id/operatoreId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Text"
        android:id="@+id/surveyId"
        android:layout_alignTop="@+id/labelSurvey"
        android:layout_toRightOf="@+id/labelSurvey"
        android:layout_toEndOf="@+id/labelSurvey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Lunghezza targa"
        android:textStyle="bold"
        android:id="@+id/labeltarga"
        android:layout_above="@+id/labelMin"
        android:layout_alignLeft="@+id/labelMin"
        android:layout_alignStart="@+id/labelMin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Min:"
        android:textStyle="bold"
        android:id="@+id/labelMin"
        android:layout_alignTop="@+id/surveyId"
        android:layout_toLeftOf="@+id/minTarga"
        android:layout_toStartOf="@+id/minTarga" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Text"
        android:id="@+id/minTarga"
        android:layout_alignTop="@+id/labelMin"
        android:layout_toLeftOf="@+id/labelMax"
        android:layout_toStartOf="@+id/labelMax"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Max:"
        android:textStyle="bold"
        android:id="@+id/labelMax"
        android:layout_alignTop="@+id/minTarga"
        android:layout_toLeftOf="@+id/maxTarga"
        android:layout_toStartOf="@+id/maxTarga" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Text"
        android:id="@+id/maxTarga"
        android:layout_alignTop="@+id/labelMax"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salva"
        android:id="@+id/button"
        android:layout_alignTop="@+id/labeltarga"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignBottom="@+id/surveyId"
        android:textSize="10dp" />

</RelativeLayout>